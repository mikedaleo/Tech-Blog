
<div class="forms d-flex flex-row justify-content-evenly">
    <div>
        <h2 class="text-white m-5">Login</h2>

        <form type="submit" class="login-form">
            <div class="mb-3">
                <label for="email-login" class="form-label text-white">Email address</label>
                <input type="text" class="form-control" id="email-login">

            </div>
            <div class="mb-3">
                <label for="password-login" class="form-label text-white">Password</label>
                <input type="password" class="form-control" id="password-login">
            </div>
            <button type="submit" class="btn btn-light">Login</button>
        </form>
    </div>
    <div>
        <h2 class="text-white m-5">Sign-up</h2>

        <form type="submit" class="signup-form">
            <div class="mb-3">
                <label for="name-signup" class="form-label text-white">Name</label>
                <input type="text" class="form-control" id="name-signup" />
            </div>
            <div class="mb-3">
                <label for="email-signup" class="form-label text-white">Email address</label>
                <input type="text" class="form-control" id="email-signup" aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text text-secondary">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
                <label for="password-signup" class="form-label text-white">Password</label>
                <input type="password" class="form-control" id="password-signup">
            </div>
            <button type="submit" class="btn btn-light mb-5">Sign up</button>
        </form>
    </div>
</div>
<script src="./js/login.js"></script>